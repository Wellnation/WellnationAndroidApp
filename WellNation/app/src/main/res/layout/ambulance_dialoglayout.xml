<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvambulancenumber"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="OD01AC7889"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginEnd="30dp"
        android:layout_width="40dp"
        android:layout_gravity="end"
        android:padding="5dp"
        android:src="@drawable/ic_call"
        android:id="@+id/btnCall"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Pilot Name"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:id="@+id/tvPilotname"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:text="Distane Away"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="Approx Cost"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:id="@+id/btnBookAmbulance"
        android:text="Book Ambulance"
        android:layout_height="wrap_content"/>
</LinearLayout>