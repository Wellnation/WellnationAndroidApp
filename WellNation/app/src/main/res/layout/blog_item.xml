<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blog_item"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_overlay"
            android:foreground="@color/overlay_color"
            android:scaleType="centerCrop"
            android:src="@drawable/healthblog_sample" />
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/blog_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="5 Simple Habits to Improve Your Overall Health"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:id="@+id/blog_author"
                android:textColor="@color/white"
                android:text="Dr Maheshwar Bhatt"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/blog_date"
                android:textColor="@color/white"
                android:text="17/04/2023"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </FrameLayout>
</androidx.cardview.widget.CardView>