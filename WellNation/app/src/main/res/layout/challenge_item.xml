<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_marginHorizontal="2dp"
    android:id="@+id/cardViewChallenge"
    app:cardCornerRadius="40dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="200dp"
        android:background="@drawable/challengebg"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_clock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="@color/white" />
            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:text="7 Days"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_gravity="end"
                android:id="@+id/tvCdays"
                android:textSize="14sp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_trophy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="@color/white" />
            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:text="7 Points"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:id="@+id/tvCpoint"
                android:textSize="18sp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:id="@+id/challengeImage"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="No Smoke"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/tvCname"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="Dont Smoke for 7 Days"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="2dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvCdesc"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="PARTICIPATE"
            android:id="@+id/btnParticipate"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="Your Score: 0"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvYourScore"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>