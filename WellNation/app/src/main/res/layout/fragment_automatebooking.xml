<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AutomatebookingFragment">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/firstquestion"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="250dp"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="Hey, could you please tell me what are your symptoms?"
                android:background="@drawable/chat_background"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/bot"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:id="@+id/symptoms"
            android:gravity="start"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_usericon"
                android:layout_height="30dp"/>
            <EditText
                android:layout_width="180dp"
                android:padding="10dp"
                android:id="@+id/etSymptoms"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter your symtoms"
                android:background="@drawable/speakout_tail"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="30dp"
                android:id="@+id/btn_mic"
                android:layout_margin="10dp"
                android:src="@drawable/ic_mic"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:id="@+id/submit"
                android:src="@drawable/ic_send"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/secondquestion"
            android:gravity="end"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="250dp"
                android:padding="10dp"
                android:id="@+id/symptomresult"
                android:textColor="@color/white"
                android:text=""
                android:textSize="12sp"
                android:background="@drawable/chat_background"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/bot"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:gravity="end"
            android:id="@+id/departmentdropdown"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <Spinner
                android:padding="10dp"
                android:id="@+id/spinnerOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:gravity="start"
            android:id="@+id/secondresponse"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvselectedDepartment"
                android:layout_width="250dp"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="Selected Department is Neurology"
                android:background="@drawable/chat_background"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rvhospitadepartmentwise"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>