<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlogdetailsFragment">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/dblog_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="5 Simple Habits to Improve Your Overall Health"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:id="@+id/dblog_author"
            android:text="Dr Maheshwar Bhatt"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/dblog_date"
            android:text="17/04/2023"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginHorizontal="20dp"
            android:id="@+id/dblog_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:layout_marginVertical="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/healthblog_sample" />
        <TextView
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:textSize="14sp"
            android:linksClickable="true"
            android:id="@+id/dblog_content"
            android:layout_width="match_parent"/>
    </LinearLayout>


</ScrollView>