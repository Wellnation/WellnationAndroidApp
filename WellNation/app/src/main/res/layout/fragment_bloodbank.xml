<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    tools:context=".BloodbankFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvaplus"
                            android:textSize="14sp"
                            android:padding="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:elevation="5dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvaminus"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvbplus"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:elevation="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvbminus"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvoplus"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:elevation="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvominus"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvabplus"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:elevation="5dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/blood"
                            android:layout_height="100dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvabminus"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>