<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BookappointmentFragment">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        app:lottie_rawRes="@raw/booking"
        android:layout_height="200dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:hint="Enter Symptoms"
            android:layout_marginVertical="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:startIconTint="@color/royal_blue"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="100dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:id="@+id/etsymptoms"
                android:gravity="bottom|start"
                android:inputType="textEmailAddress"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:clickable="false"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Select Your Prefered Date and Time"
                android:layout_height="wrap_content"/>
            <ImageView
                android:clickable="false"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/appointment"
                android:layout_marginHorizontal="10dp"
                android:layout_width="50dp"
                android:id="@+id/btnSelectDate"
                android:layout_height="50dp"/>
            <ImageView
                android:clickable="false"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/ic_clock"
                android:layout_marginHorizontal="10dp"
                android:layout_width="50dp"
                android:id="@+id/btnSelectTime"
                android:layout_height="50dp"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="match_parent"
            android:buttonTint="@color/Orange"
            android:id="@+id/sharerecord"
            android:layout_marginHorizontal="10dp"
            android:text="Do you want to share your past test records and Appointment Reports with Doctor for better diagnosis ?"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Book Now"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:id="@+id/btnbookappointment"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>