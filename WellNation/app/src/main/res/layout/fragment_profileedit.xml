<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ProfileeditFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:hint="Energency Contact"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:startIconTint="@color/royal_blue"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:id="@+id/etemergencycontact"
                android:inputType="phone"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Address"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="State"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etState"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="District"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etDistrict"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="State"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etLocality"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="Pincode"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etPincode"
                        android:inputType="number"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Vitals"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="Gender"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etGender"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="DOB (DD/MM/YYYY)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etDob"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="Blood Group"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etBloodGroup"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="Birth Mark"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/Birthmark"
                        android:inputType="number"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:hint="Height (in cm)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etHeight"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:hint="Weight (in kg)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:startIconTint="@color/royal_blue"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/etWeight"
                        android:inputType="textPersonName"
                        android:layout_height="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Diseases"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_weight="2"
                android:layout_marginBottom="10dp"
                android:maxLines="3"
                android:text="NONE"
                android:gravity="start|bottom"
                android:textAllCaps="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:text="Add Diseases Details"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:layout_marginVertical="20dp"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:id="@+id/btnSaveVitals"
            android:text="SAVE"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>