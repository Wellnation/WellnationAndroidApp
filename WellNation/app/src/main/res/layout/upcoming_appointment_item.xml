<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/upcomingAppointmentcardview"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:padding="5dp"
            android:backgroundTint="@color/background_white"
            android:background="@drawable/tabindicator"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="2dp"
                android:layout_width="10dp"
                android:id="@+id/statusImg"
                android:scaleType="fitXY"
                android:src="@drawable/circle_drawable"
                android:layout_height="10dp"
                app:tint="@color/quantum_googgreen" />
            <TextView
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:text="Online"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                android:id="@+id/tvmode"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="36dp"
            android:padding="5dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/appointment"
            app:civ_border_color="#FF000000"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/tvdepartment"
            android:layout_width="wrap_content"
            android:text="Cardiology"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:text="Sum Hospital"
            android:id="@+id/tvhospitalname"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:text="11 Sep 10:00 AM"
            android:id="@+id/tvtime"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>