<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:elevation="5dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/upcomingAppointmentcardview"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="36dp"
            android:padding="5dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/laboratory"
            app:civ_border_color="#FF000000"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/tvtestname"
            android:layout_width="wrap_content"
            android:text="Cardiology"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:text="Sum Hospital"
            android:id="@+id/tvhospitalname"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:text="11 Sep 10:00 AM"
            android:id="@+id/tvtime"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:scaleType="fitStart"
            android:id="@+id/btn_opentest"
            android:src="@drawable/ic_nextarrow"
            android:layout_height="30dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>