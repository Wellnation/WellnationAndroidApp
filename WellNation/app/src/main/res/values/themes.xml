<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WellNation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Navy_Blue</item>
        <item name="colorPrimaryVariant">@color/Blue_Grotto</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Baby_Blue</item>
        <item name="colorSecondaryVariant">@color/Navy_Blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <style name="Theme.WellNation.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.WellNation.AppWidgetContainer" parent="Theme.WellNation.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Remove the bottom line -->
        <item name="android:background">@drawable/searchview_background</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>